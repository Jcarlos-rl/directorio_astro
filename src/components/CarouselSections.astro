---
interface Props {
    sections: []
};
const { sections } = Astro.props;

---
<section class="flex gap-7 overflow-x-auto items-center">
    {
        sections.map(({title, icon}) => (
            <div class="flex flex-col items-center">
                <img class="w-6" src=`/svg/${icon}` alt=""/>
                <div class="block">
                    <span class="text-sm whitespace-nowrap">{title}</span>
                </div>
            </div>
        ))
    }
</section>
<style>
    .overflow-x-auto{
        scrollbar-width: none;
    }
    .overflow-x-auto::-webkit-scrollbar {
        width: 0;
    }
</style>
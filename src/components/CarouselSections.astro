---
interface Sections {
    title: string, 
    icon: string,
    active: boolean
}
interface Props {
    sections: Sections[]
};
const { sections } = Astro.props;

---
<section class="flex gap-7 overflow-x-auto items-center">
    {
        sections.map(({title, icon, active}) => (
            <div class={`flex flex-col items-center ${ active ? "border-b-2 pb-2 border-black" : ""}`}>
                <img class="w-6" src=`/svg/${icon}` alt=""/>
                <div class="block">
                    <span class="text-sm whitespace-nowrap">{title}</span>
                </div>
            </div>
        ))
    }
</section>
<style>
    .overflow-x-auto{
        scrollbar-width: none;
    }
    .overflow-x-auto::-webkit-scrollbar {
        width: 0;
    }
</style>